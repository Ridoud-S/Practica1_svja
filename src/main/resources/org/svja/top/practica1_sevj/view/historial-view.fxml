<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="org.svja.top.practica1_sevj.controller.HistorialController"
        prefWidth="1100" prefHeight="520">

    <!-- ===== TOP: tÃ­tulo ===== -->
    <top>
        <Label text="Historial de Sesiones"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="15" bottom="10"/>
            </BorderPane.margin>
        </Label>
    </top>

    <!-- ===== CENTER: tabla ===== -->
    <center>
        <VBox spacing="10">
            <BorderPane.margin>
                <Insets left="15" right="15"/>
            </BorderPane.margin>

            <TableView fx:id="tableHistorial" VBox.vgrow="ALWAYS">
                <columns>
                    <!-- Datos de entrada -->
                    <TableColumn fx:id="colPeso"      text="Peso (kg)"    prefWidth="80"/>
                    <TableColumn fx:id="colKilos"     text="Perder (kg)"  prefWidth="85"/>
                    <TableColumn fx:id="colVelocidad" text="Vel (km/h)"   prefWidth="80"/>
                    <TableColumn fx:id="colMinutos"   text="Min/SesiÃ³n"   prefWidth="80"/>

                    <!-- Resultados -->
                    <TableColumn fx:id="colTotalCal"  text="Total kcal"   prefWidth="90"/>
                    <TableColumn fx:id="colCalMin"    text="kcal/min"     prefWidth="80"/>
                    <TableColumn fx:id="colCalHora"   text="kcal/hora"    prefWidth="80"/>
                    <TableColumn fx:id="colHoras"     text="Total horas"  prefWidth="90"/>

                    <!-- Sesiones -->
                    <TableColumn fx:id="colS30"  text="30 min"  prefWidth="60"/>
                    <TableColumn fx:id="colS45"  text="45 min"  prefWidth="60"/>
                    <TableColumn fx:id="colS60"  text="60 min"  prefWidth="60"/>
                    <TableColumn fx:id="colS75"  text="75 min"  prefWidth="60"/>
                    <TableColumn fx:id="colS90"  text="90 min"  prefWidth="60"/>
                    <TableColumn fx:id="colS120" text="120 min" prefWidth="65"/>
                </columns>

                <placeholder>
                    <Label text="No hay sesiones guardadas aÃºn."/>
                </placeholder>
            </TableView>

            <!-- Resumen -->
            <Label fx:id="lblTotal"
                   text="Total de sesiones: 0"
                   style="-fx-font-size: 12px;"/>
        </VBox>
    </center>

    <!-- ===== BOTTOM: acciones ===== -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets top="10" bottom="15" left="15" right="15"/>
            </BorderPane.margin>

            <Button text="âŸ³ Refrescar"
                    onAction="#handleRefrescar"/>
            <Button text="ðŸ—‘ Eliminar seleccionado"
                    onAction="#handleEliminar"
                    style="-fx-base: #e07070;"/>
            <Button text="ðŸ—‘ Limpiar todo"
                    onAction="#handleLimpiarTodo"
                    style="-fx-base: #c0392b; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
